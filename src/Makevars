PKG_CPPFLAGS=-I../inst/swipl/home/include $(CXXPICFLAGS) -D_REENTRANT -D__SWI_PROLOG__ -D__SWI_EMBEDDED__
PKG_LIBS=-Wl,-Bsymbolic-functions -L../inst/swipl/lib/swipl/lib/x86_64-linux -lswipl -lgmp

all: swipl $(SHLIB)

swipl:
	mkdir -p ../linux
	cd ../linux && cmake -DCMAKE_INSTALL_PREFIX=../inst/swipl ../src/swipl-devel && make && make install
